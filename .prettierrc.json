{
  "overrides": [
      {
          "files": "*.sol",
          "options": {
              "printWidth": 120,
              "tabWidth": 4,
              "useTabs": false,
              "singleQuote": false,
              "bracketSpacing": false,
              "explicitTypes": "always"
          }
      },
      {
          "files": [
              "*.js"
          ],
          "options": {
              "printWidth": 120,
              "tabWidth": 4,
              "useTabs": true,
              "singleQuote": false,
              "semi": true,
              "bracketSpacing": true,
              "arrowParens": "always"
          }
      }
  ]
}